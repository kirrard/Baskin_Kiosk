<Window x:Class="Baskin_Kiosk.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Baskin_Kiosk"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="MainWindow" Height="1040" Width="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Gray">
            <Label
                x:Name="CurrentTime"
				Foreground ="white"
				HorizontalAlignment ="Right"
				/>
            <Button FontSize="30" Width="50" Click="Button_Click">🏤</Button>
        </Grid>

        <!--<Frame x:Name="frame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Source="/View/MessagePage/Message.xaml"/>-->

        <Frame x:Name="frame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Source="/View/HomePage/Home.xaml"/>
    </Grid>
</Window>
