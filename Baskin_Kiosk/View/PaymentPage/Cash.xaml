<Page x:Class="Baskin_Kiosk.View.PaymentPage.Cash"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:qrcode="clr-namespace:KQRCode;assembly=KQRCode"
      xmlns:local="clr-namespace:Baskin_Kiosk.View.PaymentPage"
      mc:Ignorable="d" 
      d:DesignHeight="990" d:DesignWidth="1920"
      Unloaded="Page_Unloaded"
      Title="Cash">

    <Grid>
        <StackPanel>
            <Label>현금 계산을 선택하셨습니다. 현금영수증카드를 제시해주세요</Label>
            <qrcode:KQRWebCam x:Name="webcam" Margin="12" QrDecoded="webcam_QrDecoded" Width="640" Height="480"/>
            <Label x:Name="price" Content="총 금액: "></Label>
            <Label x:Name="resultLabel" Width='500' Margin="0 50 0 0" Content="테스트"></Label>
            <Button Content="이전" Width="150" HorizontalAlignment="Left" Margin="70 0 0 0" Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Page>
